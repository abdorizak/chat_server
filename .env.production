# Production Environment Configuration
# Copy this to .env and update with your production values

# Database Configuration
DATABASE_URL=postgresql://postgres:YOUR_STRONG_PASSWORD@db:5432/chat_db
# For separate DB server, use:
# DATABASE_URL=postgresql://postgres:PASSWORD@YOUR_DB_SERVER_IP:5432/chat_db

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_min_32_chars
JWT_EXPIRATION=86400

# CORS (Update with your frontend domain)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rust Environment
RUST_LOG=info
RUST_BACKTRACE=1
